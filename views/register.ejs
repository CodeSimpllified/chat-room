<link rel="stylesheet" href="css/register.css">
<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3">
          <i class="fas fa-user-plus"></i> Register
        </h1>
        <%- include('_messages')%>
        <form action="/users/register" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Register
          </button>
        </form>
        <hr/>
        <div class="text-center">
            <!--Facebook-->
            <a href="#" class="btn btn-fb"><i class="fab fa-facebook-f pr-1"></i> Facebook</a>
            <!--Twitter-->
            <a href="#" class="btn btn-tw"><i class="fab fa-twitter pr-1"></i> Twitter</a>
            <!--Google +-->
            <a href="/users/auth/google" class="btn btn-gplus"><i class="fab fa-google-plus-g pr-1"></i> Google +</a>
            <!--Linkedin-->
            <a href="#" class="btn btn-li"><i class="fab fa-linkedin-in pr-1"></i> Linkedin</a>
        </div>
        <hr/>
        <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
      </div>
    </div>
  </div>
  